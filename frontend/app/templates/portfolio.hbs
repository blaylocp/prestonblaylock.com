{{liquid-outlet}}
{{#masonry-grid masonId="portfolio-masonry" items=model}}
  {{#each model as |item|}}
    <div class="grid-item grid-height-{{item.height}}" style="background: url({{image-url (escape-css item.image) size='portfolios'}}) center center">
      {{!-- <img src="{{item.img}}" title="{{item.name}}" alt="{{item.name}}" /> --}}
      {{#link-to 'portfolio.item' item.id}}
        <span class="portfolio-name">{{item.name}}</span>
      {{/link-to}}
    </div>
  {{/each}}
  <div class="button-group filter-button-group">
    <button data-filter="*">All</button>
    <button data-filter=".website">Websites</button>
    <button data-filter=".photography">Photography</button>
    <button data-filter=".photography">Design</button>
  </div>
{{/masonry-grid}}
